{
	"name": "Node.js & TypeScript + Python",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11"
		}
	},
	"forwardPorts": [
		3000
	],
	"mounts": [
		"source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind"
	],
	"postCreateCommand": "cd /workspaces/yamamoto_web/personal_website && npm install && cd /workspaces/yamamoto_web/group_website && npm install",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"formulahendry.auto-rename-tag",
				"bradlc.vscode-tailwindcss",
				"openai.chatgpt"
			]
		}
	}
}